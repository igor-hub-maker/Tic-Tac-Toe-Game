<Window
    x:Class="Tic_Tac_Toe_Game.BotDifficultyMenuWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Tic_Tac_Toe_Game"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Tic-Tac-Toe"
    Width="422"
    Height="562"
    ResizeMode="NoResize"
    mc:Ignorable="d">
    <StackPanel>
        <Label
            Margin="15"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="Виберіть один із варіантів важкості" />
        <Button
            Height="50"
            Margin="94,15,94,0"
            Click="Button_Click"
            Content="Легка" />
        <Button
            Height="50"
            Margin="94,30,94,0"
            Click="Button_Click_1"
            Content="Середня" />
        <Button
            Height="50"
            Margin="94,30,94,0"
            Click="Button_Click_2"
            Content="Важка" />
        <Button
            Height="50"
            Margin="94,170,94,0"
            Click="Button_Click_3"
            Content="На головну" />
    </StackPanel>
</Window>
